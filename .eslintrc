{
    "extends": ["airbnb"],
    "rules": {
        "indent": [2, 4],
        "linebreak-style": [2, "windows"],
        "no-undef": 1,
        "no-tabs": 0,
        "arrow-parens": [2, "as-needed"],
        "no-mixed-operators": 0,
        "radix": [2, "as-needed"],
        "no-nested-ternary": 0,

        "import/no-extraneous-dependencies": 0,
        "import/extensions": 0,

        "react/jsx-indent": [2, 4],
        "react/jsx-indent-props": [2, 4],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        
        "jsx-a11y/anchor-is-valid": 0
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true,
            "jsx": true
        }
    }
}